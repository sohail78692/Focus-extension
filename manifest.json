{
  "manifest_version": 3,
  "name": "Focus Extension",
  "version": "0.1.0",
  "description": "Block distracting sites, track focus tasks, and run Pomodoro timers across browsers.",
  "permissions": ["storage", "tabs", "alarms", "notifications"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_title": "Focus Extension",
    "default_popup": "src/popup.html"
  },
  "options_page": "src/options.html",
  "icons": {
    "16": "src/assets/icon16.png",
    "48": "src/assets/icon48.png",
    "128": "src/assets/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/blocked.html"],
      "matches": ["<all_urls>"]
    }
  ]
}

